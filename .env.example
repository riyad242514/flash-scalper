# ============================================================================
# FlashScalper Environment Configuration
# ============================================================================

# Environment
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# ============================================================================
# EXCHANGE CONFIGURATION
# ============================================================================

# --- Aster Exchange ---
ASTER_API_KEY=your_aster_api_key_here
ASTER_SECRET_KEY=your_aster_secret_key_here
ASTER_BASE_URL=https://fapi.asterdex.com

# --- Paradex Exchange ---
# Enable Paradex trading
PARADEX_ENABLED=false

# Environment: testnet or prod
PARADEX_ENVIRONMENT=testnet

# Ethereum private key for Paradex account derivation
# IMPORTANT: Keep this secure! Never commit to version control
PARADEX_PRIVATE_KEY=0x...

# API endpoints (default to testnet)
PARADEX_API_BASE_URL=https://api.testnet.paradex.trade
PARADEX_WS_BASE_URL=wss://ws.api.testnet.paradex.trade

# ============================================================================
# LLM CONFIGURATION
# ============================================================================

OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_MODEL=deepseek/deepseek-chat-v3-0324
LLM_ENABLED=true
LLM_TIMEOUT_MS=10000

# LLM Retry Configuration
LLM_RETRY_MAX_RETRIES=3
LLM_RETRY_INITIAL_DELAY_MS=100
LLM_RETRY_MAX_DELAY_MS=5000
LLM_RETRY_BACKOFF_MULTIPLIER=2
LLM_RETRY_JITTER=true

# LLM Circuit Breaker
LLM_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
LLM_CIRCUIT_BREAKER_SUCCESS_THRESHOLD=2
LLM_CIRCUIT_BREAKER_TIMEOUT_MS=60000

# LLM Rate Limiting
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=60
LLM_RATE_LIMIT_BURST_SIZE=60

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Position Sizing
SCALPER_LEVERAGE=10
SCALPER_POSITION_SIZE_PERCENT=25
SCALPER_MIN_POSITION_SIZE_USD=10
SCALPER_MAX_POSITION_SIZE_USD=150
SCALPER_MAX_POSITIONS=20

# Risk Management
SCALPER_TAKE_PROFIT_ROE=1.5
SCALPER_STOP_LOSS_ROE=-0.5
SCALPER_MAX_DAILY_LOSS_PERCENT=10
SCALPER_MAX_HOLD_TIME_MINUTES=10

# Signal Requirements
SCALPER_MIN_COMBINED_CONFIDENCE=58
SCALPER_MIN_SCORE=45
SCALPER_LLM_ENABLED=true

# Paper Trading
SCALPER_PAPER_TRADING=false

# ============================================================================
# MEMORY SYSTEM
# ============================================================================

MEMORY_ENABLED=true
MEMORY_MAX_TRADES=1000
MEMORY_PERSISTENCE_ENABLED=true
MEMORY_PERSISTENCE_PATH=data/memory

# ============================================================================
# WORKER CONFIGURATION
# ============================================================================

REDIS_URL=redis://localhost:6379
WORKER_CONCURRENCY=10
SIGNAL_WORKER_INTERVAL_MS=15000
POSITION_CHECK_INTERVAL_MS=5000

# ============================================================================
# MONITORING
# ============================================================================

METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================================================
# COINS TO TRADE
# ============================================================================

# Format: SYMBOL:ivishx:boost,SYMBOL:ivishx:boost
# Example: BTCUSDT:bitcoin:1.0,ETHUSDT:ethereum:1.0
# Leave empty to use defaults
SCALPER_COINS=

# ============================================================================
# NOTES
# ============================================================================

# 1. For Paradex testnet:
#    - Get test USDC from faucet
#    - Use testnet private key (not production!)
#    - Test thoroughly before production

# 2. For Paradex production:
#    - Use PARADEX_ENVIRONMENT=prod
#    - Update API URLs to production endpoints
#    - Ensure you have deposited USDC on-chain

# 3. Security:
#    - Never commit .env file to git
#    - Use environment variables in production
#    - Rotate keys regularly
#    - Keep private keys secure

# 4. Trading:
#    - Start with paper trading (SCALPER_PAPER_TRADING=true)
#    - Test with small positions first
#    - Monitor logs and metrics
#    - Set conservative risk limits
