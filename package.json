{
  "name": "flashscalper",
  "version": "1.0.0",
  "description": "Crypto scalping agent",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:api": "tsx src/api/server.ts",
    "start:signal-worker": "tsx src/workers/signal-worker.ts",
    "start:execution-worker": "tsx src/workers/execution-worker.ts",
    "start:position-worker": "tsx src/workers/position-worker.ts",
    "start:all-workers": "concurrently \"npm:start:signal-worker\" \"npm:start:execution-worker\" \"npm:start:position-worker\"",
    "start:scalper": "node dist/strategies/scalper-strategy.js",
    "start:polymarket": "node dist/strategies/polymarket-strategy.js",
    "test": "jest",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:e2e": "jest tests/e2e",
    "test:paradex": "jest tests/**/*paradex*",
    "test:paradex:live": "npx tsx scripts/test-paradex-connection.ts",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "@paradex/sdk": "^0.8.1",
    "@polymarket/clob-client": "^5.1.2",
    "bullmq": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "prom-client": "^15.1.0",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
